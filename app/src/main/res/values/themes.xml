<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Shadowfox" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Shadowfox" parent="Base.Theme.Shadowfox" />

    <!-- Minimal Calculator Button Style for Debugging -->
    <style name="MinimalCalculatorButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">20sp</item> <!-- Basic text size -->
        <item name="android:backgroundTint">@color/purple_500</item> <!-- Hardcoded color -->
        <item name="android:textColor">@color/black</item> <!-- Hardcoded color -->
        <item name="strokeColor">@color/purple_700</item> <!-- Border color -->
        <item name="strokeWidth">2dp</item> <!-- Border width -->
        <item name="cornerRadius">8dp</item> <!-- Optional: to match potential background radius -->
    </style>

</resources>