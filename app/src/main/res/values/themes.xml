<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Shadowfox" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_dark</item>
        <item name="colorOnPrimary">@color/blue_text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_accent</item>
        <item name="colorSecondaryVariant">@color/blue_accent</item> <!-- Can be same or a darker/lighter shade -->
        <item name="colorOnSecondary">@color/blue_text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Shadowfox" parent="Base.Theme.Shadowfox" />

    <style name="Theme.Shadowfox.NoActionBar" parent="Base.Theme.Shadowfox">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Shadowfox.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
         <item name="android:textColorPrimary">@color/blue_text_primary</item>
    </style>

    <style name="Theme.Shadowfox.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Minimal Calculator Button Style for Debugging -->
    <style name="MinimalCalculatorButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/blue_text_primary</item> <!-- Changed to blue shade -->
        <item name="android:textColor">@color/black</item> <!-- Changed to blue shade -->
        <item name="strokeColor">@color/blue_primary</item> <!-- Changed to blue shade -->
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>